{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install",
    "nixpacksPlan": {
      "phases": {
        "build": {
          "cmds": []
        },
         "install": {
          "cmds": [
            "npm install"
          ]
        },
        "start": {
          "cmds": [
            "node server.js"
          ]
        }
      },
      "providers": [
        "node",
        "node"
      ]
    }
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "npm start",
    "sleepApplication": false,
    "multiRegionConfig": {
      "europe-west4-drams3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}